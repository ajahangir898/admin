# ====================================================
# Environment Configuration Example
# Copy this file to .env and fill in your values
# ====================================================

# Server Configuration
ADMIN_UI=https://yourdomain.com/admin
PORT=5001

# MongoDB Configuration
MONGODB_URI=mongodb://username:password@localhost:27017/dbname?authSource=admin
MONGODB_DB_NAME=your_db_name
MONGODB_DB_PASSWORD=your_db_password

# CORS Configuration
ALLOWED_ORIGINS=https://systemnextit.com,https://opbd.systemnextit.com,https://superadmin.systemnextit.com,https://cdn.systemnextit.com,http://localhost:3001,http://localhost:3000,https://7w2rb0cn-3000.asse.devtunnels.ms,http://admin.localhost:3000,*.systemnextit.com

# API Configuration
VITE_API_BASE_URL=https://yourdomain.com
API_BASE=https://yourdomain.com/api

# Remote Save Configuration
VITE_REMOTE_SAVE_DEBOUNCE_MS=1200
VITE_DISABLE_REMOTE_SAVE=false
VITE_PRIMARY_DOMAIN=yourdomain.com

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# ====================================================
# CDN Configuration (Optional)
# ====================================================
VITE_CDN_ENABLED=true
VITE_CDN_PROVIDER=cloudflare  # Options: cloudflare, cloudfront, bunnycdn, custom
VITE_CDN_BASE_URL=https://cdn.yourdomain.com
VITE_CDN_IMAGE_URL=https://images.yourdomain.com  # Optional, defaults to CDN_BASE_URL
VITE_CDN_STATIC_URL=https://static.yourdomain.com  # Optional, defaults to CDN_BASE_URL
VITE_CDN_IMAGE_TRANSFORM=true  # Enable CDN image transformations
VITE_CDN_IMAGE_QUALITY=80
VITE_CDN_IMAGE_FORMAT=auto  # Options: auto, webp, avif, original

# ====================================================
# AI Features Configuration
# ====================================================

# Gemini AI API Key (Required for mobile category AI features)
# Get your API key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# YOLO API Configuration (for image search)
VITE_YOLO_API_URL=https://yourdomain.com/yolo-api

# ====================================================
# Redis Configuration (Optional)
# ====================================================
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here
